mixin adminItem(item)
  .card.m-2.bg-light(style='width: 20rem;')
    img.card-img-top(src=item.img, alt='Card image cap', style='width: 100%')
    .card-block
      form(method="post")
        input.form-control.form-control-sm(type='text', name='img', placeholder='Link to img', value=item.img)
        hr
        input.form-control.form-control-sm(type='text', placeholder='id', name='_id', value=item._id disabled)
        input.form-control.form-control-sm(type='text', placeholder='Title', name='title', value=item.title)
        textarea#exampleFormControlTextarea1.form-control(rows='3', placeholder='Description', name='desc')= item.desc
        .card-body
          input.form-control.form-control-sm(type='text', placeholder='Year', name='year', value=item.year)
          input.form-control.form-control-sm(type='text', placeholder='Topic', name='topic', value=item.topic)
          input.form-control.form-control-sm(type='text', placeholder='Quantity', name='quantity', value=item.quantity)
          
                        
        .form-check
          h4 Sale
          input#saleTrue.form-check-input.ml-0(type='radio', name="sale", value='true', checked=item.sale)
          label.form-check-label(for='saleCheck') true
          input#saleFalse.form-check-input.ml-0(type='radio', name="sale", value='false', checked=!item.sale)
          label.form-check-label(for='saleFalse') false
        hr
        .form-check
          h4 Top
          input#topTrue.form-check-input.ml-0(type='radio', name="top", value='true', checked=item.top)
          label.form-check-label(for='topTrue') true
          input#topFalse.form-check-input.ml-0(type='radio', name="top", value='false', checked=!item.top)
          label.form-check-label(for='topFalse') false
        hr
        .form-check
          h4 Second hand
          input#secondhandTrue.form-check-input.ml-0(type='radio', name='secondhand', value='true', checked=item.secondhand)
          label.form-check-label(for='secondhandTrue') true
          input#secondhandFalse.form-check-input.ml-0(type='radio', name='secondhand', value='false', checked=!item.secondhand)
          label.form-check-label(for='secondhandFalse') false
        .card-footer
          button(type="submit").btn.btn-warning.m-2 Update
          a(href='/admin/items/' + item.title.toLowerCase().replace(' ', '') + '/delete').btn.btn-danger.m-2 Delete
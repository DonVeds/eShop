mixin header
  header.row.bg-warning.pt-2
    .col
      if name
        p.text-center
          a(href=`/user?login=${login}&password=${password}`).text-muted= `Hello ${name}`
      else
        p.text-center= 'Login please'
    .col-6
      h4.text-center= title
    .col
      p.text-center
        a(href='/usr/cart').text-muted Cart
  hr.m-0
  .row.bg-warning.py-2
    .col
      h5.text-center eShop
    .col-7
      input(type="search", name="").w-75
      button search
mixin item(title, imgSrc, desc, topic, year, top, quantity)
  .card.m-2.bg-light(style='width: 20rem;')
    img.card-img-top(src=imgSrc, alt='Card image cap', style='width: 100%')
    .card-block
      h4.card-title= title
      p.card-text= desc
      .card-body
        a(href='#').btn.btn-success.m-2 Buy
        a(href='#').btn.btn-primary.m-2 Cart
        a(href='#').btn.btn-warning.m-2 Wishlist
      .card-footer
        small.text-muted= `${year} || ${topic} || ${quantity}`

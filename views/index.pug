extends _layout
include ./_mixins/_header

block header
  +header

block content
  .row.px-5
    .col-5
      if login && password
        a(href=`/buy/?login=${login}&password=${password}` style="width: 100%").btn.btn-primary Buy 
      else
        a(href='/buy' style="width: 100%").btn.btn-primary Buy 
    .col-2
    .col-5
      if login && password
        a(href=`/sell/?login=${login}&password=${password}` style="width: 100%").btn.btn-info Sell 
      else
        a(href='/sell' style="width: 100%").btn.btn-info Sell 